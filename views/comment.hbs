{{#with clinicianInfo}}
    <header>
        <div class="topBar">
            <div class="logo">
                <a href=""> 
                    <img src="../res/logo.png" alt="logo">
                </a>
            </div>
            <div>
                <div class="topButton">
                    <a href="/dashboard/{{this._id}}">Dashboard</a>
                </div>
                <div class="topButton">
                    <a href="">Comment</a>
                    {{!-- TODO: href--}}
                </div>
                <img class = "line" src="/res/Line.png" alt="line">
                <div id="clinicianName">
                    <p>{{this.screen_name}}</p>
                    <div id="sideBar">
                        <img id="triangle" src="/res/triangle.png" alt="triangle" onclick="click_sideBtn()">
                        <div class="sideButton" style="display: none;">
                            <p><a href="/{{this._id}}/newPatient">Create new patient</a></p>
                            {{!-- TODO: href--}}
                            <p><a href="/login">Log out</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div id="dashboard">
            <table>
                <caption>
                    <p id = "tableTitle">Dashboard</p>
                    <p id="tableTime"></p>
                </caption>
                <tr class = "tableHeading">
                    <th>Name</th>
                    <th>Data type</th>
                    <th>Value</th>
                    <th>Time</th>
                    <th>Comment</th>
                </tr>
                {{#each this.patient}}
                    <tr style="{{checkNotRequired this.bloodGlucose}};">
                        <td>{{this.first_name}}</td>
                        <td>bloodGlucose</td>
                        <td style="{{checkSafety this.safety_threshold this.bloodGlucose "0"}}">{{value this.bloodGlucose}}</td>
                        <td>{{getTime this.bloodGlucose}}</td>
                        <td>{{comment this.bloodGlucose}}</td>
                    </tr>
                    <tr style="{{checkNotRequired this.weight}}">
                        <td>{{this.first_name}}</td>
                        <td>Weight</td>
                        <td style="{{checkSafety this.safety_threshold this.weight "1"}}">{{value this.weight}}</td>
                        <td>{{getTime this.weight}}</td>
                        <td>{{comment this.weight}}</td>
                    </tr>
                    <tr style="{{checkNotRequired this.insulinTaken}}">
                        <td>{{this.first_name}}</td>
                        <td>Insulin taken</td>
                        <td style="{{checkSafety this.safety_threshold this.insulinTaken "2"}}">{{value this.insulinTaken}}</td>
                        <td>{{getTime this.insulinTaken}}</td>
                        <td>{{comment this.insulinTaken}}</td>
                    </tr>
                    <tr style="{{checkNotRequired this.exercise}}">
                        <td>{{this.first_name}}</td>
                        <td>Exercise</td>
                        <td style="{{checkSafety this.safety_threshold this.exercise "3"}}">{{value this.exercise}}</td>
                        <td>{{getTime this.exercise}}</td>
                        <td>{{comment this.exercise}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>
    </main>
{{/with}}
