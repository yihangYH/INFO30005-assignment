<script src="/js/createPatient.js"></script>
{{#with id}}
<div class="main">
            <div class="header">
                <div >
                    <a href="/dashboard/{{this}}">
                        <img class="back" src="/res/back.jpg" alt="">
                    </a>
                    <img class ="logo" src="/res/logo.png" alt="logo">
                </div>
            </div>
            <div class="body-register">
                <p class="title">New patient</p>
                <form action="/{{this}}/newPatient" method="post" onsubmit=" return createPatientValidation();">
                    <ul class="login-info">
                        <li> 
                            <input type="text" class="firstName" id="firstName" placeholder="First name" name="first_name"> 
                            <input type="text" class="lastName" id="lastName" placeholder="Last name" name="last_name">
                        </li>
                        <li > <input type="text" class="screenName" id="screenName" placeholder="Screen name" name="screen_name"></li>
                        <li > <input type="text" class="brith" id="brith" placeholder="Year of birth                       DD/MM/YY" name="birthday"></li>
                        <li > <input type="email" class="userId" id="userId" placeholder="User id" name="userid"></li>
                        <li > <input type="text" class="password" id="password" placeholder="Password" name="password"></li>
                    </ul>
                    <h1 class="required">Required</h1>
                        <h1 class="safety-threhold">Safety threshold</h1>
                        {{!-- <h1 class="time-series">Time series</h1> --}}
                    <ul class="data-info">
                        <li> 
                        <p>BLOOD GLUCOSE</p>
                        <input class ="data-check-box" id="bloodGlucoseCheckbox" type="checkbox" id="" name="bloodGlucoseCheckbox">
                        <input class = "lower-value" id = "bloodGlucoseLowerValue" type="number" step="0.01" min="0" max="99" name="bloodGlucoseLowerValue" readonly>
                        <p class="sign"> ~ </p>
                        <input class = "upper-value" id = "bloodGlucoseUpperValue" type="number" step="0.01" min="0" max="99" name="bloodGlucoseUpperValue" readonly>
                        <p class="unit" style="font-size: 40px; font-weight: normal;">nmol/L</p>
                        {{!-- <input class = "lower-time-value" id = "bloodGlucoseTimeLowerValue" type="time" name="bloodGlucoseTimeLowerValue" readonly>
                        <p class="timeSign"> ~ </p>
                        <input class = "upper-time-value" id = "bloodGlucoseTimeUpperValue" type="time" name="bloodGlucoseTimeUpperValue" readonly> --}}
                        <!-- <input type="button" value="AM" class="AMbtn" readonly>
                        <p class="AMPMSign" style="font-size: 50px;">/</p>
                        <input type="button" value="PM" class="PMbtn" readonly> -->
                        <hr>
                        </li>
                        <li>
                            <p>WEIGHT</p>
                            <input class ="data-check-box" id="weightCheckbox" type="checkbox" name="weightCheckbox" id="">
                            <input class = "lower-value" id="weightLowerValue" type="number" step="0.01" min="0" max="999" name="weightLowerValue" readonly>
                            <p class="sign"> ~ </p>
                            <input class = "upper-value" id="weightUpperValue" type="number" step="0.01" min="0" max="999" name="weightUpperValue" readonly>
                            <p class="unit" style="font-size: 40px; font-weight: normal;">kg</p>
                            {{!-- <input class = "lower-time-value" id = "weightTimeLowerValue" type="time" name = "weightTimeLowerValue" readonly>
                            <p class="timeSign"> ~ </p>
                            <input class = "upper-time-value" id = "weightTimeUpperValue" type="time" name="weightTimeUpperValue" readonly> --}}
                            <!-- <input type="button" value="AM" class="AMbtn" readonly>
                            <p class="AMPMSign" style="font-size: 50px;">/</p>
                            <input type="button" value="PM" class="PMbtn" readonly> -->
                            <hr>
                        </li>
                        <li>
                            <p>INSULIN TAKEN</p>
                            <input class ="data-check-box" id="insulinTakenCheckbox" type="checkbox" name="insulinTakenCheckbox" id="">
                            <input class = "lower-value" id="insulinTakenLowerValue" type="number" step="0.01" min="0" max="99" name="insulinTakenLowerValue" readonly>
                            <p class="sign"> ~ </p>
                            <input class = "upper-value" id="insulinTakenUpperValue" type="number" step="0.01" min="0" max="99" name="insulinTakenUpperValue" readonly>
                            <p class="unit" style="font-size: 40px; font-weight: normal;">dose(s)</p>
                            {{!-- <input class = "lower-time-value" id = "insulinTakenTimeLowerValue" type="time" name="insulinTakenTimeLowerValue" readonly>
                            <p class="timeSign"> ~ </p>
                            <input class = "upper-time-value" id = "insulinTakenTimeUpperValue" type="time" name="insulinTakenTimeUpperValue" readonly> --}}
                            <!-- <input type="button" value="AM" class="AMbtn" readonly>
                            <p class="AMPMSign" style="font-size: 50px;">/</p>
                            <input type="button" value="PM" class="PMbtn" readonly> -->
                            <hr>
                        </li>
                        <li>
                            <p>EXERCISE</p>
                            <input class ="data-check-box" id="exerciseCheckbox" type="checkbox" name="exerciseCheckbox" >
                            <input class = "lower-value" id="exerciseLowerBalue" type="number" step="0.01" min="0" max="999999" name="exerciseLowerBalue" readonly>
                            <p class="sign"> ~ </p>
                            <input class = "upper-value" id="exerciseUpperValue" type="number" step="0.01" min="0" max="999999" name="exerciseUpperValue" readonly>
                            <p class="unit" style="font-size: 40px; font-weight: normal;">steps</p>
                            {{!-- <input class = "lower-time-value" id = "exerciseTimeLowerValue" type="time" name="exerciseTimeLowerValue" readonly>
                            <p class="timeSign"> ~ </p>
                            <input class = "upper-time-value" id = "exerciseTimeUpperValue" type="time" name="exerciseTimeUpperValue" readonly> --}}
                            <!-- <input type="button" value="AM" class="AMbtn" readonly>
                            <p class="AMPMSign" style="font-size: 50px;">/</p>
                            <input type="button" value="PM" class="PMbtn" readonly> -->
                            <hr>
                        </li>
                    </ul>
                    <div class="create">
                        <button type="submit">Create</button>
                    </div>
                </form>
            </div>
    </div>
</div>
{{/with}}
