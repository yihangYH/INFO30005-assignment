<main>
    <div id="dashboard">
        <table>
            <caption>
                <p id = "tableTitle">Dashboard</p>
                <p id="tableTime">2022.1.10</p>
            </caption>
            <tr class = "tableHeading">
                <th>Name</th>
                <th>Blood glucose level(nmol/L)</th>
                <th>Weight(kg)</th>
                <th>Insulin taken(does)</th>
                <th>Exercise(steps)</th>
            </tr>


            {{!-- <tr>
                <td>Alan</td>
                <td>130 <span>13:00</span></td>
                <td>80 <span>13:00</span></td>
                <td>2 <span>13:00</span></td>
                <td>8000 <span>13:00</span></td>
            </tr> --}}
            {{#with data}}
            {{#each patient}}
            <tr>
            <td>{{this.first_name}}</td>
            <td style="{{checkSafety this.safety_threshold this.bloodGlucose "0"}}">{{getValue this.bloodGlucose}}<span>{{getTime this.bloodGlucose}}</span></td>
            <td style="{{checkSafety this.safety_threshold this.weight "1"}}">{{getValue this.weight}}<span>{{getTime this.weight}}</span></td>
            <td style="{{checkSafety this.safety_threshold this.insulinTaken "2"}}">{{getValue this.insulinTaken}}<span>{{getTime this.insulinTaken}}</span></td>
            <td style="{{checkSafety this.safety_threshold this.exercise "3"}}">{{getValue this.exercise}}<span>{{getTime this.exercise}}</span></td>
            </tr>
            {{/each}}
            {{/with}}
        </table>
    </div>
</main>

